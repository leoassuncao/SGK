<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/instructor_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="1dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <TextView
            android:id="@+id/instructor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/instructor_graduation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="13sp"
            android:layout_marginTop="5dp"/>

        <View android:id="@+id/separator"
            android:background="#ccc"
            android:layout_width = "fill_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/instructor_graduation"
            android:layout_centerVertical ="true"
            android:layout_marginTop="3dp"
            />

        <ImageView
            android:id="@+id/instructor_photo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="-3dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/separator"
           />

        <TextView
            android:id="@+id/instructor_train"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/separator"
            android:textSize="13sp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/instructor_classes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/instructor_train"
            android:layout_alignLeft="@+id/instructor_train"
            android:textSize="13sp"
            android:layout_marginTop="7dp"/>

        <TextView
            android:id="@+id/instructor_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/instructor_classes"
            android:layout_alignLeft="@+id/instructor_classes"
            android:textSize="13sp"
            android:layout_marginTop="7dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>